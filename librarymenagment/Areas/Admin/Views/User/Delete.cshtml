@using Microsoft.AspNetCore.Identity
@model IdentityUser
@using librarymenagment.Helpers

<div class="book-details-container">
    <h1 class="page-title">Delete User</h1>
    <div class="book-info-card">
        <h4 class="card-title">Are you sure you want to delete this user?</h4>
        <hr />
        <dl class="row details-list">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>
        
        <div class="action-buttons">
            <form asp-area="Admin" asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-secondary" asp-area="Admin" asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>