@model PaginatedList<librarymenagment.Models.Book>
@using librarymenagment.Helpers

@{
    ViewData["Title"] = "Index";
}

<style>
    .sort-header {
        position: relative;
        cursor: pointer;
        text-decoration: none;
        color: #212529;
    }

        .sort-header:hover {
            color: #0056b3;
        }

    .sort-indicator::after {
        content: '↕';
        position: relative;
        left: 5px;
        color: #999;
    }

    .sort-asc::after {
        content: '↑';
        position: relative;
        left: 5px;
        color: #000;
    }

    .sort-desc::after {
        content: '↓';
        position: relative;
        left: 5px;
        color: #000;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-area="Admin" asp-action="Create">Create New</a>
</p>

<!-- Add Filter Form -->
<form asp-area="Admin" asp-action="Index" method="get">
    <div class="row mb-3">
        <div class="col-md-3">
            <label class="form-label">Title:</label>
            <input type="text" name="searchTitle" class="form-control" value="@ViewData["CurrentTitleFilter"]" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Author:</label>
            <select name="authorId" class="form-select">
                <option value="" selected="@(ViewData["CurrentAuthorFilter"] == null)">All Authors</option>
                @foreach (var author in (IEnumerable<librarymenagment.Models.Author>)ViewBag.Author)
                {
                    <option value="@author.Id" selected="@(author.Id.ToString() == ViewData["CurrentAuthorFilter"]?.ToString())">
                        @author.Name @author.LastName
                    </option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Category:</label>
            <select name="categoryId" class="form-select">
                <option value="" selected="@(ViewData["CurrentCategoryFilter"] == null)">All Categories</option>
                @foreach (var category in (IEnumerable<librarymenagment.Models.Category>)ViewBag.Category)
                {
                    <option value="@category.Id" selected="@(category.Id.ToString() == ViewData["CurrentCategoryFilter"]?.ToString())">
                        @category.Name
                    </option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <div class="form-check mt-4">
                <input class="form-check-input" type="checkbox" name="activeOnly" id="activeOnly" value="true" @(ViewData["CurrentActiveFilter"]?.ToString() == "True" ? "checked" : "")>
                <label class="form-check-label" for="activeOnly">
                    Active Only
                </label>
            </div>
        </div>
        <div class="col-md-1 d-flex align-items-end flex-wrap gap-4">
            <button type="submit" class="btn btn-primary">Apply</button>
            <a asp-area="Admin" asp-action="Index" class="btn btn-secondary">Clear Filters</a>
        </div>
    </div>
</form>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-middle" style="overflow: scroll;">
                        <thead>
                            <tr>
                                <th>
                                    <a class="sort-header @(ViewData["CurrentSort"] == "title" ? "sort-asc" : ViewData["CurrentSort"] == "title_desc" ? "sort-desc" : "sort-indicator")"
                                       asp-action="Index"
                                       asp-area="Admin"
                                       asp-route-sortOrder="@(ViewData["CurrentSort"] == "title" ? "title_desc" : "title")"
                                       asp-route-searchTitle="@ViewData["CurrentTitleFilter"]"
                                       asp-route-authorId="@ViewData["CurrentAuthorFilter"]"
                                       asp-route-categoryId="@ViewData["CurrentCategoryFilter"]">
                                        @Html.DisplayNameFor(model => model.First().Title)
                                    </a>
                                </th>
                                <th>
                                    <a class="sort-header @(ViewData["CurrentSort"] == "description" ? "sort-asc" : ViewData["CurrentSort"] == "description_desc" ? "sort-desc" : "sort-indicator")"
                                       asp-action="Index"
                                       asp-area="Admin"
                                       asp-route-sortOrder="@(ViewData["CurrentSort"] == "description" ? "description_desc" : "description")"
                                       asp-route-searchTitle="@ViewData["CurrentTitleFilter"]"
                                       asp-route-authorId="@ViewData["CurrentAuthorFilter"]"
                                       asp-route-categoryId="@ViewData["CurrentCategoryFilter"]">
                                        @Html.DisplayNameFor(model => model.First().Description)
                                    </a>
                                </th>
                                <th>
                                    <a class="sort-header @(ViewData["CurrentSort"] == "copies" ? "sort-asc" : ViewData["CurrentSort"] == "copies_desc" ? "sort-desc" : "sort-indicator")"
                                       asp-acti on="Index"
                                       asp-area="Admin"
                                       asp-route-sortOrder="@(ViewData["CurrentSort"] == "copies" ? "copies_desc" : "copies")"
                                       asp-route-searchTitle="@ViewData["CurrentTitleFilter"]"
                                       asp-route-authorId="@ViewData["CurrentAuthorFilter"]"
                                       asp-route-categoryId="@ViewData["CurrentCategoryFilter"]">
                                        @Html.DisplayNameFor(model => model.First().Copies)
                                    </a>
                                </th>
                                <th>
                                    <a class="sort-header @(ViewData["CurrentSort"] == "author" ? "sort-asc" : ViewData["CurrentSort"] == "author_desc" ? "sort-desc" : "sort-indicator")"
                                       asp-action="Index"
                                       asp-area="Admin"
                                       asp-route-sortOrder="@(ViewData["CurrentSort"] == "author" ? "author_desc" : "author")"
                                       asp-route-searchTitle="@ViewData["CurrentTitleFilter"]"
                                       asp-route-authorId="@ViewData["CurrentAuthorFilter"]"
                                       asp-route-categoryId="@ViewData["CurrentCategoryFilter"]">
                                        @Html.DisplayNameFor(model => model.First().Author)
                                    </a>
                                </th>
                                <th>
                                    <a class="sort-header @(ViewData["CurrentSort"] == "category" ? "sort-asc" : ViewData["CurrentSort"] == "category_desc" ? "sort-desc" : "sort-indicator")"
                                       asp-action="Index"
                                       asp-area="Admin"
                                       asp-route-sortOrder="@(ViewData["CurrentSort"] == "category" ? "category_desc" : "category")"
                                       asp-route-searchTitle="@ViewData["CurrentTitleFilter"]"
                                       asp-route-authorId="@ViewData["CurrentAuthorFilter"]"
                                       asp-route-categoryId="@ViewData["CurrentCategoryFilter"]">
                                        @Html.DisplayNameFor(model => model.First().Category)
                                    </a>
                                </th>
                                <th>
                                    <a class="sort-header @(ViewData["CurrentSort"] == "active" ? "sort-asc" : ViewData["CurrentSort"] == "active_desc" ? "sort-desc" : "sort-indicator")"
                                       asp-action="Index"
                                       asp-area="Admin"
                                       asp-route-sortOrder="@(ViewData["CurrentSort"] == "active" ? "active_desc" : "active")"
                                       asp-route-searchTitle="@ViewData["CurrentTitleFilter"]"
                                       asp-route-authorId="@ViewData["CurrentAuthorFilter"]"
                                       asp-route-categoryId="@ViewData["CurrentCategoryFilter"]">
                                        @Html.DisplayNameFor(model => model.First().Active)
                                    </a>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Copies)
                                    </td>
                                    <td>
                                        @if (item.Author != null)
                                        {
                                            @Html.DisplayFor(modelItem => item.Author.Name) @Html.DisplayFor(modelItem => item.Author.LastName)
                                        }
                                    </td>
                                    <td>
                                        @if (item.Category != null)
                                        {
                                            @Html.DisplayFor(modelItem => item.Category.Name)
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Active)
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-area="Admin" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a class="btn btn-info" asp-area="Admin" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a class="btn btn-danger" asp-area="Admin" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
            <a class="page-link" asp-area="Admin" asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-currentSearch="@ViewData["CurrentSearch"]"
               asp-route-sortOrder="@ViewData["CurrentSort"]">
                Previous
            </a>
        </li>
        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
            <a class="page-link" asp-area="Admin" asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-currentSearch="@ViewData["CurrentSearch"]"
               asp-route-sortOrder="@ViewData["CurrentSort"]">
                Next
            </a>
        </li>
    </ul>
</nav>
