@model librarymenagment.Models.Author

@{
    ViewData["Title"] = "Create Author";
}

<h1 class="mt-4">Create Author</h1>
<hr />
<div class="row border mt-4" style="background: white;">
    <div class="col-12 col-md-6 p-4">
        <form class="d-flex flex-column gap-2" asp-area="Admin" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="Active" class="form-check-input" type="checkbox" />
                <label class="form-check-label" asp-for="Active"></label>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-area="Admin" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
    <div class="col-12 col-md-6 p-0">
        <img class="w-100 h-100" src="/images/book-background.jpg" alt="Background Image" />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
