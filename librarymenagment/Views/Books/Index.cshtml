@model IEnumerable<librarymenagment.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<style>
    .sort-header {
        position: relative;
        cursor: pointer;
        text-decoration: none;
        color: #212529;
    }

    .sort-header:hover {
        color: #0056b3;
    }

    .sort-indicator::after {
        content: '↕';
        position: relative;
        left: 5px;
        color: #999;
    }

    .sort-asc::after {
        content: '↑';
        position: relative;
        left: 5px;
        color: #000;
    }

    .sort-desc::after {
        content: '↓';
        position: relative;
        left: 5px;
        color: #000;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<!-- Add Filter Form -->
<form asp-action="Index" method="get">
    <div class="row mb-3">
        <div class="col-md-3">
            <label class="form-label">Title:</label>
            <input type="text" name="searchTitle" class="form-control" value="@ViewData["CurrentTitleFilter"]" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Author:</label>
            <select name="authorId" class="form-select">
                <option value="" selected="@(ViewData["CurrentAuthorFilter"] == null)">All Authors</option>
                @foreach (var author in (IEnumerable<librarymenagment.Models.Author>)ViewBag.Authors)
                {
                    <option value="@author.id" selected="@(author.id.ToString() == ViewData["CurrentAuthorFilter"]?.ToString())">
                        @author.name @author.last_name
                    </option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Category:</label>
            <select name="categoryId" class="form-select">
                <option value="" selected="@(ViewData["CurrentCategoryFilter"] == null)">All Categories</option>
                @foreach (var category in (IEnumerable<librarymenagment.Models.Category>)ViewBag.Categories)
                {
                    <option value="@category.id" selected="@(category.id.ToString() == ViewData["CurrentCategoryFilter"]?.ToString())">
                        @category.name
                    </option>
                }
            </select>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">Apply Filters</button>
            <a asp-action="Index" class="btn btn-secondary">Clear Filters</a>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a class="sort-header @(ViewData["CurrentSort"]?.ToString() == "" ? "sort-asc" : ViewData["CurrentSort"]?.ToString() == "title_desc" ? "sort-desc" : "sort-indicator")"
                   asp-action="Index" 
                   asp-route-sortOrder="@ViewData["TitleSortParam"]"
                   asp-route-searchTitle="@ViewData["CurrentTitleFilter"]"
                   asp-route-authorId="@ViewData["CurrentAuthorFilter"]"
                   asp-route-categoryId="@ViewData["CurrentCategoryFilter"]">
                    @Html.DisplayNameFor(model => model.First().Title)
                </a>
            </th>
            <th>
                <a class="sort-header @(ViewData["CurrentSort"]?.ToString() == "description" ? "sort-asc" : ViewData["CurrentSort"]?.ToString() == "description_desc" ? "sort-desc" : "sort-indicator")"
                   asp-action="Index" 
                   asp-route-sortOrder="@ViewData["DescriptionSortParam"]"
                   asp-route-searchTitle="@ViewData["CurrentTitleFilter"]"
                   asp-route-authorId="@ViewData["CurrentAuthorFilter"]"
                   asp-route-categoryId="@ViewData["CurrentCategoryFilter"]">
                    @Html.DisplayNameFor(model => model.First().Description)
                </a>
            </th>
            <th>
                <a class="sort-header @(ViewData["CurrentSort"]?.ToString() == "copies" ? "sort-asc" : ViewData["CurrentSort"]?.ToString() == "copies_desc" ? "sort-desc" : "sort-indicator")"
                   asp-action="Index" 
                   asp-route-sortOrder="@ViewData["CopiesSortParam"]"
                   asp-route-searchTitle="@ViewData["CurrentTitleFilter"]"
                   asp-route-authorId="@ViewData["CurrentAuthorFilter"]"
                   asp-route-categoryId="@ViewData["CurrentCategoryFilter"]">
                    @Html.DisplayNameFor(model => model.First().Copies)
                </a>
            </th>
            <th>
                <a class="sort-header @(ViewData["CurrentSort"]?.ToString() == "author" ? "sort-asc" : ViewData["CurrentSort"]?.ToString() == "author_desc" ? "sort-desc" : "sort-indicator")"
                   asp-action="Index" 
                   asp-route-sortOrder="@ViewData["AuthorSortParam"]"
                   asp-route-searchTitle="@ViewData["CurrentTitleFilter"]"
                   asp-route-authorId="@ViewData["CurrentAuthorFilter"]"
                   asp-route-categoryId="@ViewData["CurrentCategoryFilter"]">
                    @Html.DisplayNameFor(model => model.First().Author)
                </a>
            </th>
            <th>
                <a class="sort-header @(ViewData["CurrentSort"]?.ToString() == "category" ? "sort-asc" : ViewData["CurrentSort"]?.ToString() == "category_desc" ? "sort-desc" : "sort-indicator")"
                   asp-action="Index" 
                   asp-route-sortOrder="@ViewData["CategorySortParam"]"
                   asp-route-searchTitle="@ViewData["CurrentTitleFilter"]"
                   asp-route-authorId="@ViewData["CurrentAuthorFilter"]"
                   asp-route-categoryId="@ViewData["CurrentCategoryFilter"]">
                    @Html.DisplayNameFor(model => model.First().Category)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Copies)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.name) @Html.DisplayFor(modelItem => item.Author.last_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
