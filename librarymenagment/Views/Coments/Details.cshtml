@model librarymenagment.Models.Coments
@using System.Security.Claims

@{
    ViewData["Title"] = "Comment Details";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Comment Details</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Coments" asp-action="Index">Comments</a></li>
        <li class="breadcrumb-item active">Details</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-comment-dots me-1"></i> Comment Information
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Id</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">User</dt>
                <dd class="col-sm-9">@Model.User?.UserName ?? "Unknown User"</dd>

                <dt class="col-sm-3">Book</dt>
                <dd class="col-sm-9">@Model.Book?.Title ?? "Unknown Book"</dd>

                <dt class="col-sm-3">UserId</dt>
                <dd class="col-sm-9">@Model.UserId</dd>

                <dt class="col-sm-3">BookId</dt>
                <dd class="col-sm-9">@Model.BookId</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
