@model  IEnumerable<librarymenagment.Models.PublishingHouse>
@using librarymenagment.Helpers
@using System.Security.Claims

@{
    ViewData["Title"] = "Index";
    var userBookPermissions = ViewBag.UserBookPermissions as Dictionary<int, List<string>>;
    var currentUserId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}

<style>
    /* Stilizimi për titujt dhe ikonat */
    .sort-header {
        position: relative;
        cursor: pointer;
        text-decoration: none;
        color: #212529;
    }

    .sort-header:hover {
        color: #007bff;
    }

    /* Klasat për të treguar drejtimin e renditjes */
    .sort-indicator::after {
        content: '↕';
        position: relative;
        left: 5px;
        color: #999;
    }

    .sort-asc::after {
        content: '↑';
        position: relative;
        left: 5px;
        color: #007bff;
    }

    .sort-desc::after {
        content: '↓';
        position: relative;
        left: 5px;
        color: #007bff;
    }

    /* Stilizimi për kartat e filtrave dhe përmbajtjes */
    .card-header {
        background-color: #f8f9fa;
        font-weight: bold;
    }

    .card-body {
        padding: 1.25rem;
    }

    /* Tabela */
    .table th, .table td {
        vertical-align: middle;
    }

    .table th {
        color: #495057;
        font-weight: bold;
    }

    /* Stilizimi i filtrave */
    .form-label {
        font-weight: 500;
        font-size: 14px;
    }

    /* Butonat e filtrave */
    .btn-primary, .btn-secondary {
        font-size: 14px;
    }

    /* Pagination */
    .pagination .page-item.disabled .page-link {
        background-color: #f1f1f1;
        border-color: #ddd;
        color: #6c757d;
    }

    .pagination .page-link {
        color: #007bff;
        border-radius: 0.25rem;
    }

    .pagination .page-link:hover {
        background-color: #007bff;
        color: white;
    }

    /* Butonat e veprimit */
    .btn-sm {
        font-size: 13px;
        padding: 0.25rem 0.5rem;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    /* Shtimi i pakicave për tregimin e elementeve në tabela */
    .table-responsive {
        max-height: 400px;
        overflow-y: auto;
    }
</style>

<div class="container-fluid px-4">
    <h1 class="mt-4">Books and Publishing Houses Management</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active">Books and Publishing Houses</li>
    </ol>

    <!-- Books Section -->
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-book me-1"></i>
                    Books List
                </div>
            </div>
        </div>
        <div class="card-body">
            <!-- Filter Form and Book Table Here -->
            <!-- Your existing books table logic goes here (as you've already provided) -->
        </div>
    </div>

    <!-- Publishing Houses Section -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-building me-1"></i> Publishing Houses
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Authors</th>
                            <th>PublishedBooks</th>
                            <th>FoundedDate</th>
                            <th>Id</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Authors)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PublishedBooks)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FoundedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PublishedBooks)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                               
                                    <a asp-area="" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a asp-area="" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a asp-area="" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>



                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Create New Publishing House -->
    <div class="d-flex justify-content-between">
        <a asp-action ="" asp-action="Create" class="btn btn-primary">Create New Publishing House</a>
    </div>

    
</div>