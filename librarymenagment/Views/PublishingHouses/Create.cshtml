@model librarymenagment.Models.PublishingHouse
@{
    ViewData["Title"] = "Create Publishing House";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Create Publishing House</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="PublishingHouse" asp-action="Index">Publishing Houses</a></li>
        <li class="breadcrumb-item active">Create</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus me-1"></i> Create a New Publishing House
        </div>
        <div class="card-body">
            <form asp-area="" asp-action="Create">
                <div class="form-group">
                    <label for="Name" class="form-label">Name:</label>
                    <input type="text" id="Name" name="Name" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Address" class="form-label">Address:</label>
                    <input type="text" id="Address" name="Address" class="form-control" required />
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary me-2">Save</button>
                    <a asp-area="" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>